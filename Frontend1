using System;
using System.Collections.Generic;
using System.Linq;
using System.Web;
using System.Web.UI;
using System.Web.UI.WebControls;
using ServiceReference1;

public partial class admissionUI : System.Web.UI.Page
{
    ServiceClient c = new ServiceClient();
    protected void Page_Load(object sender, EventArgs e)
    {

    }

    protected void Button1_Click(object sender, EventArgs e)
    {
        int id = Convert.ToInt32(idtxt.Text);
        Label1.Text = c.insert(id, nametxt.Text, classnametxt.Text, phonetxt.Text, dobtxt.Text);
    }

    protected void Button2_Click(object sender, EventArgs e)
    {
       GridView1.DataSource= c.getdata1();
        GridView1.DataBind();
    }

    protected void delete_Click(object sender, EventArgs e)
    {
        int id = Convert.ToInt16(idtxt.Text);
        Label1.Text = c.delete(id);
    }

    protected void Button3_Click(object sender, EventArgs e)
    {
        int id = Convert.ToInt32(idtxt.Text);
        Label1.Text = c.update(id, nametxt.Text, classnametxt.Text, phonetxt.Text, dobtxt.Text);

    }
}
